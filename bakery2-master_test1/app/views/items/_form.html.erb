<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :item_name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :item_price %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, id: :item_category %>
  </div>

  <div class="field">
    <%= form.label :caloriesPerServing %>
    <%= form.number_field :caloriesPerServing, id: :item_caloriesPerServing %>
  </div>

  <div class="field">
    <%= form.label :glutenFree %>
    <%= form.check_box :glutenFree, id: :item_glutenFree %>
  </div>

  <div class="field">
    <%= form.label :containsNuts %>
    <%= form.check_box :containsNuts, id: :item_containsNuts %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :item_description %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image, id: :item_image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
