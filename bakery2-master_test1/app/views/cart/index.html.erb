<p id="notice"><%= notice %></p>

<div id="cartContainer">

<% if @cart.empty? %>
<p>you need to have some products added to buy something</p>
<% end %>

    <table id="customers">
        <% total = 0 %>
        <% @cart.each do |id, quantity| %>
        
        <% item = Item.find_by_id(id) %>
        
        <tr>
            <td>
                <div class="image">
                    <%= link_to (image_tag item.image, :style =>"height:40px"), item %>
                </div>
                
            </td>
            
            <td class="name"><%= link_to item.name, item %></td>
            <td><a href="/cart/remove/<%= item.id %>">Remove From Cart</a></td>
            <td class="price"><%= number_to_currency(item.price, :unit =>"€") %></td>
            <td class="quantity"><%= quantity %></td>
            <td class="price"><%= number_to_currency(quantity * item.price, :unit =>"€") %></td>
            
        </tr>
        
        <tr>
            <% total += quantity * item.price %>
            
            
        </tr>
        
        <% end %>
        
        <tr>
            Grand Total: <%= number_to_currency(total, :unit => "€") %>
            
        </tr>
        
        <td>
        <a href="/cart/clear" class="button">Empty Cart </a>
        
        </td>
        
        
    </table>
    
    
    <p><a href="/items" class="button">Continue Shopping</a></p>
    <a href="/checkout" class="button">Checkout</a>
    
